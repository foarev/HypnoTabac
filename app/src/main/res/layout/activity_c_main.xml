<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".client.ClientMainActivity">

    <include
        layout="@layout/status_bar"
        android:id="@+id/status_bar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/addLayout"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/status_bar"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/addcig"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="start"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="64dp"
            android:src="@drawable/add_cig"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="@string/add" />

        <ImageView
            android:id="@+id/stats"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="start"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="64dp"
            android:src="@drawable/stats"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/addcig"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="@string/add" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/gradeLayout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/status_bar"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="A quel point cette cigarette est-elle indispensable ?"
            android:textSize="28sp"
            app:layout_constraintBottom_toTopOf="@id/btn2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="32dp"
            android:id="@+id/questionGrade"
            />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/btn1"
            android:gravity="center"
            android:includeFontPadding="false"
            android:id="@+id/btn1"
            android:layout_gravity="start"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="64dp"
            app:layout_constraintEnd_toStartOf="@id/btn2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="1"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/btn2"
            android:gravity="center"
            android:includeFontPadding="false"
            android:id="@+id/btn2"
            android:layout_gravity="start"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="64dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="2"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/btn3"
            android:gravity="center"
            android:includeFontPadding="false"
            android:id="@+id/btn3"
            android:layout_gravity="start"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="64dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="3"/>

        <ImageView
            android:id="@+id/next"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="start"
            android:layout_marginTop="32dp"
            android:src="@drawable/suivant"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn2"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="@string/next" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/conditionsLayout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/status_bar"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Dans quelles conditions consommez-vous cette cigarette ?"
            android:textSize="28sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/buttonsLayout"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:id="@+id/questionConditions"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/buttonsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/questionConditions"
            app:layout_constraintBottom_toTopOf="@id/other">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/cafe"
                android:gravity="center"
                android:includeFontPadding="false"
                android:id="@+id/btnCafe"
                android:layout_gravity="start"
                app:layout_constraintEnd_toStartOf="@id/btnEnnui"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/btnEnnui"
                app:layout_constraintBottom_toBottomOf="@id/btnEnnui"
                android:contentDescription="@string/add"
                />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:textSize="20sp"
                android:src="@drawable/ennui"
                android:textColor="@color/colorBackground"
                android:gravity="center"
                android:includeFontPadding="false"
                android:id="@+id/btnEnnui"
                android:layout_gravity="start"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/btnApresManger"
                android:contentDescription="@string/add"
                android:backgroundTint="@color/colorPrimary"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:textSize="20sp"
                android:src="@drawable/soiree"
                android:textColor="@color/colorBackground"
                android:gravity="center"
                android:id="@+id/btnSoiree"
                android:layout_gravity="start"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/btnEnnui"
                app:layout_constraintTop_toTopOf="@id/btnEnnui"
                app:layout_constraintBottom_toBottomOf="@id/btnEnnui"
                android:contentDescription="@string/add"
                android:backgroundTint="@color/colorPrimary"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:textSize="20sp"
                android:src="@drawable/pause"
                android:textColor="@color/colorBackground"
                android:gravity="center"
                android:id="@+id/btnPause"
                android:layout_gravity="start"
                app:layout_constraintTop_toTopOf="@id/btnApresManger"
                app:layout_constraintBottom_toBottomOf="@id/btnApresManger"
                app:layout_constraintEnd_toStartOf="@id/btnEnnui"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnEnnui"
                android:contentDescription="@string/add"
                android:backgroundTint="@color/colorPrimary"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:textSize="20sp"
                android:src="@drawable/apres_manger"
                android:textColor="@color/colorBackground"
                android:gravity="center"
                android:includeFontPadding="false"
                android:id="@+id/btnApresManger"
                android:layout_gravity="start"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnEnnui"
                app:layout_constraintBottom_toBottomOf="parent"
                android:contentDescription="@string/add"
                android:backgroundTint="@color/colorPrimary"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:textSize="20sp"
                android:background="@drawable/ic_circle_24dp"
                android:textColor="@color/colorBackground"
                android:gravity="center"
                android:id="@+id/btnAutre"
                android:layout_gravity="start"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/btnEnnui"
                app:layout_constraintTop_toTopOf="@id/btnApresManger"
                app:layout_constraintBottom_toBottomOf="@id/btnApresManger"
                android:contentDescription="@string/add"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:id="@+id/other"
            android:hint="@string/other"
            android:inputType="textShortMessage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/buttonsLayout"
            app:layout_constraintBottom_toTopOf="@id/done"
            android:autofillHints="@string/other" />
        <ImageView
            android:id="@+id/done"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="start"
            android:layout_marginBottom="48dp"
            android:src="@drawable/ic_done_black_24dp"
            android:tint="@color/colorPrimaryLight"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/other"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="@string/add" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>