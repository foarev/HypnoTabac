<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".client.ClientMainActivity">

    <include
        layout="@layout/status_bar_hypno"
        android:id="@+id/status_bar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/addLayout"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/status_bar"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/addcig"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="start"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="64dp"
            android:src="@drawable/add_cig"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="@string/add" />

        <ImageView
            android:id="@+id/stats"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="start"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="64dp"
            android:src="@drawable/stats"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/addcig"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="@string/add" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/gradeLayout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/status_bar"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="A quel point cette cigarette est-elle indispensable ?"
            android:textSize="28sp"
            app:layout_constraintBottom_toTopOf="@id/btn2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="32dp"
            android:id="@+id/questionGrade"
            />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/btn1"
            android:gravity="center"
            android:includeFontPadding="false"
            android:id="@+id/btn1"
            android:layout_gravity="start"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="64dp"
            app:layout_constraintEnd_toStartOf="@id/btn2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="1"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/btn2"
            android:gravity="center"
            android:includeFontPadding="false"
            android:id="@+id/btn2"
            android:layout_gravity="start"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="64dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="2"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/btn3"
            android:gravity="center"
            android:includeFontPadding="false"
            android:id="@+id/btn3"
            android:layout_gravity="start"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="64dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="3"/>

        <ImageView
            android:id="@+id/next"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="start"
            android:layout_marginTop="32dp"
            android:src="@drawable/suivant"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn2"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="@string/next" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/conditionsLayout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/status_bar"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Dans quelles conditions consommez-vous cette cigarette ?"
            android:textSize="28sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/buttonsLayout"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:id="@+id/questionConditions"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/buttonsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/questionConditions"
            app:layout_constraintBottom_toTopOf="@id/done">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/btn_empty"
                android:id="@+id/btnCafe"
                app:layout_constraintEnd_toStartOf="@id/btnEnnui"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/btnEnnui"
                app:layout_constraintBottom_toBottomOf="@id/btnEnnui"
                android:contentDescription="@string/add"
                />
            <TextView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="Café"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:shadowColor="#000000"
                android:shadowRadius="7"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="@id/btnCafe"
                app:layout_constraintBottom_toBottomOf="@id/btnCafe"
                app:layout_constraintEnd_toEndOf="@id/btnCafe"
                app:layout_constraintStart_toStartOf="@id/btnCafe"
                />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/btn_empty"
                android:id="@+id/btnEnnui"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/btnApresManger"
                android:contentDescription="@string/add"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="Ennui"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:shadowColor="#000000"
                android:shadowRadius="7"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="@id/btnEnnui"
                app:layout_constraintBottom_toBottomOf="@id/btnEnnui"
                app:layout_constraintEnd_toEndOf="@id/btnEnnui"
                app:layout_constraintStart_toStartOf="@id/btnEnnui"
                />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/btn_empty"
                android:id="@+id/btnSoiree"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/btnEnnui"
                app:layout_constraintTop_toTopOf="@id/btnEnnui"
                app:layout_constraintBottom_toBottomOf="@id/btnEnnui"
                android:contentDescription="@string/add"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="Soirée"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:shadowColor="#000000"
                android:shadowRadius="7"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="@id/btnSoiree"
                app:layout_constraintBottom_toBottomOf="@id/btnSoiree"
                app:layout_constraintEnd_toEndOf="@id/btnSoiree"
                app:layout_constraintStart_toStartOf="@id/btnSoiree"
                />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/btn_empty"
                android:gravity="center"
                android:id="@+id/btnPause"
                android:layout_gravity="start"
                app:layout_constraintTop_toTopOf="@id/btnApresManger"
                app:layout_constraintBottom_toBottomOf="@id/btnApresManger"
                app:layout_constraintEnd_toStartOf="@id/btnEnnui"
                app:layout_constraintStart_toStartOf="parent"
                android:contentDescription="@string/add"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="Pause"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:shadowColor="#000000"
                android:shadowRadius="7"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="@id/btnPause"
                app:layout_constraintBottom_toBottomOf="@id/btnPause"
                app:layout_constraintEnd_toEndOf="@id/btnPause"
                app:layout_constraintStart_toStartOf="@id/btnPause"
                />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/btn_empty"
                android:id="@+id/btnApresManger"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnEnnui"
                app:layout_constraintBottom_toTopOf="@id/other"
                android:contentDescription="@string/add"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="Après manger"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:shadowColor="#000000"
                android:shadowRadius="7"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="@id/btnApresManger"
                app:layout_constraintBottom_toBottomOf="@id/btnApresManger"
                app:layout_constraintEnd_toEndOf="@id/btnApresManger"
                app:layout_constraintStart_toStartOf="@id/btnApresManger"
                />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/btn_empty"
                android:id="@+id/btnAutre"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/btnEnnui"
                app:layout_constraintTop_toTopOf="@id/btnApresManger"
                app:layout_constraintBottom_toBottomOf="@id/btnApresManger"
                android:contentDescription="@string/add"
                />
            <TextView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="Autre"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:shadowColor="#000000"
                android:shadowRadius="7"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="@id/btnAutre"
                app:layout_constraintBottom_toBottomOf="@id/btnAutre"
                app:layout_constraintEnd_toEndOf="@id/btnAutre"
                app:layout_constraintStart_toStartOf="@id/btnAutre"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="16dp"
                android:id="@+id/other"
                android:visibility="gone"
                android:hint="@string/other"
                android:inputType="textShortMessage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnApresManger"
                app:layout_constraintBottom_toBottomOf="parent"
                android:autofillHints="@string/other" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <ImageView
            android:id="@+id/done"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="start"
            android:layout_marginBottom="48dp"
            android:src="@drawable/valider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/buttonsLayout"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="@string/add" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>